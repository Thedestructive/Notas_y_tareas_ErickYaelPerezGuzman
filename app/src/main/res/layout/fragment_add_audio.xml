<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAudio">

        <ImageView
            android:id="@+id/add_audio_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="Media"
            android:scrollbarDefaultDelayBeforeFade="400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/audiomultimedia" />

        <EditText
            android:id="@+id/add_audio_title"
            android:layout_width="403dp"
            android:layout_height="140dp"
            android:layout_marginTop="56dp"
            android:autofillHints=""
            android:gravity="start"
            android:maxLines="20"
            android:ems="10"
            android:hint="Descripcion"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_audio_image"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/add_audio_guardar"
            android:layout_width="181dp"
            android:layout_height="51dp"
            android:text="Guardar"
            app:backgroundTint="@color/purple_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_audio_title"
            app:layout_constraintVertical_bias="0.863" />

        <Button
            android:id="@+id/add_audio_grabar"
            android:layout_width="181dp"
            android:layout_height="52dp"
            android:text="Grabar"
            app:backgroundTint="@color/purple_200"
            app:layout_constraintBottom_toTopOf="@+id/add_audio_guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_audio_title"
            app:layout_constraintVertical_bias="0.452" />

</androidx.constraintlayout.widget.ConstraintLayout>